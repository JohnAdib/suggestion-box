{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../config/tsconfig-base",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@v1Feedback/*": [
        "src/v1/feedback/*"
      ],
      "@database": [
        "src/core/database/"
      ],
      "@errors": [
        "src/core/errors/"
      ],
      "@interfaces": [
        "src/core/interfaces/"
      ],
      "@logger": [
        "src/core/logger/"
      ],
      "@middlewares": [
        "src/core/middlewares/"
      ],
      "@responses": [
        "src/core/responses/"
      ],
      "@server": [
        "src/core/server/"
      ],
      "@validator": [
        "src/core/validator/"
      ],
    },
    "outDir": "dist",
  },
  "include": [
    "**/*.ts",
    "**/*.mts",
  ],
  "exclude": [
    "node_modules",
    "**/dist",
  ]
}